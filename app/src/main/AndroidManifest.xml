        </service>

        <activity android:name=".part3chapter01.P3C01MainActivity" />
        <activity
            android:name=".part2chapter08.P2C08MainActivity"
            android:theme="@style/Theme.Kotlin_sample2.NoActionBar.TransparentStatusBar" />
        <activity
            android:name=".part2chapter07.P2C07MainActivity"
