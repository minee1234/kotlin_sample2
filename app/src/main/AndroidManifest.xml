        <activity
            android:name=".part3chapter02.P3C02MainActivity"
            android:theme="@style/Theme.Kotlin_sample2.NoActionBar.TransparentStatusBar" />

        <service
            android:name=".part3chapter01.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
